@{
    ViewBag.Title = "Home Page";
}

<div class="ms-Grid-row ms-bgColor-themeDark ms-fontColor-white intro">
    <div class="ms-Grid-col ms-u-lg10 ms-u-xl8 ms-u-xlPush2 ms-u-lgPush1">
        <h2 class="ms-font-su ms-fontColor-white">Welcome @ViewBag.UserName!</h2>
        <p class="ms-font-xl ms-fontColor-white"><b>Apps for SharePoint - </b>Embracing web standards, the new cloud app model gives you maximum choice and flexibility to build a new class of apps for SharePoint using familiar languages, tools, and hosting services.</p>
        <a href="http://dev.office.com" class="ms-Button"><span class="ms-Button-label">Learn more &raquo;</span></a>
    </div>
</div>

<div class="ms-Grid-row ms-Grid spacer">
    <div class="ms-Grid-row">
        <div class="ms-Grid-col ms-u-lg10 ms-u-xl8 ms-u-xlPush2 ms-u-lgPush1">
            <div class="ms-Grid-col ms-u-sm6 ms-u-md4 ms-u-lg4">
                <h2 class="ms-font-xl ms-fontWeight-semibold">Overview</h2>
                <p class="ms-font-m">Learn what apps for SharePoint are, why you should build them, and the concepts that are fundamental to building them for SharePoint.</p>
                <p class="ms-Button">
                    <a class="ms-Button-label" href="http://go.microsoft.com/fwlink/?LinkID=294440">
                        Learn more &raquo;
                    </a>
                </p>
            </div>
            <div class="ms-Grid-col ms-u-sm6 ms-u-md4 ms-u-lg4">
                <h2 class="ms-font-xl ms-fontWeight-semibold">Office UI Fabric</h2>
                <p class="ms-font-m">Fabric is a responsive, mobile-first, front-end framework, designed to make it quick and simple for you to create web experiences using the Office Design Language.</p>
                <p class="ms-Button">
                    <a class="ms-Button-label" href="https://github.com/officedev/office-ui-fabric">
                        Learn more &raquo;
                    </a>
                </p>
            </div>
            <div class="ms-Grid-col ms-u-sm6 ms-u-md4 ms-u-lg4">
                <h2 class="ms-font-xl ms-fontWeight-semibold">Developer training</h2>
                <p class="ms-font-m">Learn about apps for SharePoint with this interactive course offering developer-focused how to training and walkthrough videos.</p>
                <p class="ms-Button">
                    <a class="ms-Button-label" href="http://go.microsoft.com/fwlink/?LinkID=294441">
                        Learn more &raquo;
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

