@model Provisioning.CreateSite.MvcWeb.Models.NewWebProperties

@{
    ViewBag.Title = "Scenario 1";
}

<h2>Scenario 1</h2>


@using (Html.BeginForm("CreateWeb", "Home")) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Create a subsite in the host web using all available templates.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WebTemplate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedWebTemplate, Model.WebTemplate)
            @Html.ValidationMessageFor(model => model.SelectedWebTemplate, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.SPHostUrl)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
